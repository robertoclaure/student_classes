<h1>Listing students</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.course_id %></td>
        <td><%= link_to 'Show', student, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, :class => 'btn btn-info' %>
